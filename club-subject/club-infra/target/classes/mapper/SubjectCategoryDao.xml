<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.club.subject.infra.basic.mapper.SubjectCategoryDao">

    <resultMap type="com.club.subject.infra.basic.entity.SubjectCategory" id="SubjectCategoryMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="catergoryName" column="catergory_name" jdbcType="VARCHAR"/>
        <result property="categoryType" column="category_type" jdbcType="INTEGER"/>
        <result property="imageUrl" column="image_url" jdbcType="VARCHAR"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SubjectCategoryMap">
        select
idcatergory_namecategory_typeimage_urlparent_id
        from subject_category
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SubjectCategoryMap">
        select
idcatergory_namecategory_typeimage_urlparent_id
        from subject_category
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="catergoryName != null and catergoryName != ''">
                and catergory_name = #{catergoryName}
            </if>
            <if test="categoryType != null">
                and category_type = #{categoryType}
            </if>
            <if test="imageUrl != null and imageUrl != ''">
                and image_url = #{imageUrl}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from subject_category
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="catergoryName != null and catergoryName != ''">
                and catergory_name = #{catergoryName}
            </if>
            <if test="categoryType != null">
                and category_type = #{categoryType}
            </if>
            <if test="imageUrl != null and imageUrl != ''">
                and image_url = #{imageUrl}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into subject_category(catergory_namecategory_typeimage_urlparent_id)
        values (#{catergoryName}#{categoryType}#{imageUrl}#{parentId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into subject_category(catergory_namecategory_typeimage_urlparent_id)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.catergoryName}#{entity.categoryType}#{entity.imageUrl}#{entity.parentId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into subject_category(catergory_namecategory_typeimage_urlparent_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.catergoryName}#{entity.categoryType}#{entity.imageUrl}#{entity.parentId})
        </foreach>
        on duplicate key update
catergory_name = values(catergory_name)category_type = values(category_type)image_url = values(image_url)parent_id = values(parent_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update subject_category
        <set>
            <if test="catergoryName != null and catergoryName != ''">
                catergory_name = #{catergoryName},
            </if>
            <if test="categoryType != null">
                category_type = #{categoryType},
            </if>
            <if test="imageUrl != null and imageUrl != ''">
                image_url = #{imageUrl},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from subject_category where id = #{id}
    </delete>

</mapper>

